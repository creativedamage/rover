{% extends "index" %}

{% block content %}
    <main> 
        <!--? Slider Area Start-->
        <div class="slider-area">
            <div class="slider-active">
                <!-- Slider Single -->
                <div class="single-slider d-flex align-items-center slider-height">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-xl-7 col-lg-8 col-md-10 ">
                                <!-- Video icon -->
                                <div class="video-icon d-none">
                                    <a class="popup-video btn-icon" href="https://www.youtube.com/watch?v=up68UAfH0d0" data-animation="bounceIn" data-delay=".4s">
                                        <i class="fas fa-play"></i>
                                    </a>
                                </div>
                                <div class="hero__caption">
                                    <h1 class="text-white" data-animation="fadeInUp" data-delay=".3s">{{entry.headingTitle}}</h1>
                                    <p class="text-white" data-animation="fadeInUp" data-delay=".6s">{{entry.headingText1}}</p>
                                    <a href="{{entry.headingButtonLink}}" class="hero-btn text-white" data-animation="fadeInLeft" data-delay=".3s">{{entry.headingButtonText}}<i class="ti-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
              
            </div>
        </div>
        <!-- Slider Area End -->
        <!--? Our Services Start -->
        <div class="our-services section-padding30">
            <div class="container">
                <div class="row justify-content-sm-center">
                    <div class="cl-xl-7 col-lg-8 col-md-10">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-70">
                            <span>{{entry.servicesSubtext}}</span>
                            <h2>{{entry.servicesTitle}}</h2>
                        </div> 
                    </div>
                </div>
                <div class="row">
                    {% for service in entry.serviceCard.all %}
                    {% set image = service.icon.one %}

                    <div class=" col-lg-4 col-md-6 col-sm-6">
                        <div class="single-services text-center mb-30">

                            <img style="padding-bottom: 10px;" src="{{ image.url }}" width="20%" alt="">
                            <div class="services-cap">
                                <h5><a href="#">{{service.serviceName}}</a></h5>
                                <p>{{service.serviceText}}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    
                    
                </div>
            </div>
        </div>
        <!-- Our Services End -->
        {% for quickAbout in entry.aboutFull.all %}

        <!--? About Area Start-->
        <div class="about-area fix">
            <!--Right Contents  -->
            <div class="about-img">    
            </div>
            <!-- left Contents -->
            <div class="about-details">
                <div class="right-caption">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-50">
                        <h2>{{ quickAbout.quickTitle }}</h2>
                        <div>   {{ quickAbout.quickText }}</div>
                    </div>
                    <div class="about-more">
                     
                    </div>
                </div>
            </div>
        </div>
        <!-- About Area End-->
        {% endfor %}

    
        <!--? Team Start -->
        <div class="team-area section-padding30">
            <div class="container">
                <div class="row justify-content-sm-center">
                    <div class="cl-xl-7 col-lg-8 col-md-10">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-70">
                            <h2>Our Team Mambers</h2>
                        </div> 
                    </div>
                </div>
                <div class="row">
                    <!-- single Tem -->

                    {% for teamMember in entry.teamMembers.all %}
                    {% set image = teamMember.teamMemberImage.one %}
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-">
                        <div class="single-team mb-30">
                            <div class="team-img">
                                <img src="{{ image.url }}" alt="">
                            </div>
                            <div class="team-caption">
                                <span>{{ teamMember.teamMemberName }}</span>
                                <h3><a href="#">{{ teamMember.teamMemberRole }}</a></h3>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

           

                </div>
            </div>
        </div>
        <!-- Team End -->
        <!--? Testimonial Start -->
        <div class="testimonial-area testimonial-padding section-bg" data-background="assets/img/gallery/section_bg03_green.png">
            <div class="container">
                <!-- Testimonial contents -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-8 col-lg-8 col-md-10">
                        <div class="h1-testimonial-active dot-style">
                            
                            {% for testimonials in entry.testimonial.all %}

                            <!-- Single Testimonial -->
                            <div class="single-testimonial text-center">
                                <div class="testimonial-caption ">
                                    <!-- founder -->
                                    <div class="testimonial-founder">
                                        <div class="founder-img mb-40">
                                            <span>{{ testimonials.personName }}</span>
                                            <p style="z-index: 1;" class="text-black">{{ testimonials.dogName }}</p>
                                        </div>
                                    </div>
                                    <div class="testimonial-top-cap">
                                        <p>“{{ testimonials.testimonial }}”</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Testimonial End -->

    </main>
{% endblock %}